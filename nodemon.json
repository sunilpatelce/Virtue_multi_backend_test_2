{
  "restartable": "rs",
  "ignore": [
    ".git",
    "./node_modules",
    "./package-lock.json",
    "./eslintrc",
    "./build"
  ],
  "verbose": true,
  "execMap": {
    "ts": "ts-node"
  },
  "watch": ["./src/**/*"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts,json",
  "delay": 2500
}
